@model BancoChiloe.Models.Cuenta

@{
    ViewData["Title"] = "Detalle de Cuenta";
}

<div class="container">

    <div>
        <h3>@ViewData["Title"]</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipoCuenta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoCuenta)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaApertura)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaApertura)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SaldoInicial)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SaldoInicial)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Saldo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Saldo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsActive)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NombreUsuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreUsuario)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-info">Editar</a> 
        <a asp-action="Index">Volver</a>
    </div>
</div>