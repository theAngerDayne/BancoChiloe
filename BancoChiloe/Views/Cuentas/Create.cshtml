@model BancoChiloe.Models.ViewModel.CuentaViewModel
@using BancoChiloe.Extensiones
@{
    ViewData["Title"] = "Crear cuenta";
}
<div class="container">    

    <h3>@ViewData["Title"]</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Cuenta.TipoCuenta" class="control-label"></label>
                    <select asp-for="Cuenta.TipoCuenta" class="form-control" asp-items="Html.GetEnumSelectList<TipoCuenta>()"></select>
                    <span asp-validation-for="Cuenta.TipoCuenta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cuenta.SaldoInicial" class="control-label"></label>
                    <input asp-for="Cuenta.SaldoInicial" class="form-control" />
                    <span asp-validation-for="Cuenta.SaldoInicial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cuenta.Saldo" class="control-label"></label>
                    <input asp-for="Cuenta.Saldo" class="form-control" />
                    <span asp-validation-for="Cuenta.Saldo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Cuenta.AuxClienteID">Cliente</label>
                    <select asp-for="@Model.Cuenta.AuxClienteID" asp-items="Model.ListaClientes.ToSelectListItem(Model.ListaClientes.First().ToString())" class="form-control"></select>
                </div>


                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-outline-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Volver</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    @if (!string.IsNullOrEmpty(ViewBag.server))
    {
        <script type="text/javascript">
              Swal.fire("¡Información!", '@ViewBag.server', "error");
        </script>
    }

}
