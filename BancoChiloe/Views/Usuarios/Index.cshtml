@model IEnumerable<BancoChiloe.Models.AppUser>

@{
    ViewData["Title"] = "Usuarios del sistema";
}
<div class="container">

    <h3>@ViewData["Title"]</h3>

    <p>
        <a asp-action="Create" class="btn btn-outline-success">Nuevo Usuario</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UltimoAcceso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UltimoAcceso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>



                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Editar</a>                    
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Eliminar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

